<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MealPlanner.ViewModels"
        xmlns:views="clr-namespace:MealPlanner.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utils="using:MealPlanner.Converters"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="1000" Height="650"
        x:Class="MealPlanner.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        WindowStartupLocation="CenterOwner"
        Icon="/Assets/food-logo.ico"
        Title="Meal Planner"
        Content="{Binding ContentViewModel}">
        <Window.Resources>
                <utils:FoodCategoriesConverter x:Key="FoodCategoriesConverter"/>
        </Window.Resources>
</Window>
